@model IEnumerable<Core.Dtos.StokKartAramaWebDTO>

@{
    ViewBag.Title = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>View</h2>

<div id="example">
    <div id="grid"></div>
    <script>
                $(document).ready(function() {
                    $("#grid").kendoGrid({
                        dataSource: {
                            type: "odata",
                            transport: {
                                read: "Kampanyalar/GetCampaignsFromSP"
                            },
                            schema: {
                                model: {
                                    fields: {
                                        id: { type: "number" },
                                        UrunBarkodNo: { type: "number" },
                                        SKUKodu: { type: "string" },
                                        StokIsmi: { type: "string" }
                                    }
                                }
                            },
                            pageSize: 20,
                            serverPaging: true,
                            serverFiltering: true,
                            serverSorting: true
                        },
                        height: 550,
                        filterable: true,
                        sortable: true,
                        pageable: true,
                        columns: [{
                            field: "id",
                                filterable: false
                            },
                            "UrunBarkodNo",
                            {
                                field: "SKUKodu",
                                title: "SKUKodu"
                            }, {
                                field: "StokIsmi",
                                title: "StokIsmi"
                            }
                        ]
                    });
                });
    </script>
</div>
